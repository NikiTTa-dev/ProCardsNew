{
  "ConnectionStrings": {
    "default": "Server=localhost;Port=5432;database=ProCardsNew;Uid=postgres;Pwd=5432;Include Error Detail=true;"
  },
  "ValidationSettings": {
    "CardSideLength": 300,
    "DeckNameLength": 40,
    "DeckDescriptionLength": 300,
    "DeckPasswordHashLength": 128,
    "UserLoginLength": 30,
    "UserEmailLength": 100,
    "UserNormalizedLoginLength": 30,
    "UserNormalizedEmailLength": 100,
    "UserFirstNameLength": 50,
    "UserLastNameLength": 50,
    "UserLocationLength": 50,
    "UserRefreshTokenLength": 50,
    "UserRecoveryCodeLength": 50,
    "UserPasswordHashLength": 128,
    "ImageNameLength": 30,
    "ImageFileExtensionLength": 10,
    "SideNameLength": 10,
    "UserPasswordMinLength": 8,
    "UserPasswordMaxLength": 40,
    "GuidLength": 36,
    "UserPasswordRecoveryCodeLength": 6
  },
  "LockoutSettings": {
    "AccessFailedMaxCountInclusive": 5,
    "LockoutMinutes": 10,
    "PasswordRecoveryFailMaxCountInclusive": 5
  },
  "EmailSettings" : {
    "From": "",
    "Password": "",
    "EmailServiceUrl": "smtp.gmail.com"
  },
  "PasswordRecoveryCodeSettings": {
    "MinInclusive": 1,
    "MaxExclusive": 1000000,
    "ExpirationMinutes": 10
  },
  "JwtSettings": {
    "Secret": "super-secret-key",
    "AccessTokenName": ".AspNetCore.ProCards.Id",
    "RefreshTokenName": ".AspNetCore.Application.Id",
    "AccessTokenExpiryMinutes": 60,
    "RefreshTokenExpiryHours": 184,
    "Issuer": "ProCards",
    "Audience": "ProCards"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
