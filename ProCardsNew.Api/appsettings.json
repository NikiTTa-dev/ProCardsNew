{
  "ConnectionStrings": {
    "default": "Server=localhost;Port=5432;database=ProCardsNew;Uid=postgres;Pwd=5432;Include Error Detail=true;"
  },
  "ValidationSettings": {
    "SideLength": 300
  },
  "EmailSettings" : {
    "From": "",
    "Password": "",
    "EmailServiceUrl": "smtp.gmail.com"
  },
  "JwtSettings": {
    "Secret": "super-secret-key",
    "AccessTokenName": ".AspNetCore.ProCards.Id",
    "RefreshTokenName": ".AspNetCore.Application.Id",
    "AccessTokenExpiryMinutes": 60,
    "RefreshTokenExpiryHours": 184,
    "Issuer": "ProCards",
    "Audience": "ProCards"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
